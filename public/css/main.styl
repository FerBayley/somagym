table
	color green
	font-size .8em
	text-align center
	tr
		border solid 1px #029f23
		padding .2em 2em .2em 2em
	td
		border solid 1px #029f23
		padding .2em 2em .2em 2em
		
.Completo
	background-color green
	color #FFF
	
.Logo-tabla
	text-align center
	margin 0
