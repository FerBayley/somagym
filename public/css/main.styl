*
	border 0
	margin 0
	padding 0
body
	background-image url('../../public/images/img5.jpg')
	background-repeat no-repeat
	background-position center
	background-size cover
	font-family 'Roboto', sans-serif
	font-size 16px
	height 100%
	height 620px
.Columna
	background-color #FFF
	height 100%
	margin 0 0 0 6em
	opacity 0.9
	position fixed
	width 20%
	&-logo
		padding 5em 0 0 0
		text-align center
	&-items
		margin 1em 0 0 0
		padding 2em 1em 0 1em
		ul li
			font-size 1em
			list-style none
			line-height 50px
			text-align center
			a
				border-radius 5px
				color #00cc2c
				padding .5em .5em .5em .5em
				text-decoration none
			a:hover
				border solid 2px #00cc2c
				color #333
	&-direccion
		height auto
		line-height 25px
		margin 4em 0 0 0
		padding 0 .5em 0 .5em
		text-align center
		a
			color #333
			text-decoration none
		a:hover
			text-decoration underline
		p
			font-size .9em
			

.Ventana
	background-image url('../../public/images/bg.png')
	background-repeat no-repeat
	background-position center
	background-size cover
	color green
	display none
	height 100%
	position fixed
	top 0
	left 0
	z-index 1000
	width 100%
	&-contenedor
		background-color #FFF
		border-radius 5px
		border solid 5px #00cc2c
		-webkit-border-radius 5px
		-moz-border-radius 5px
		-ms-border-radius 5px
		o-border-radius 5px
		height auto
		margin 0 auto
		margin-top 1em
		max-width 900px
		padding 2em 2em 2em 2em
		width auto
